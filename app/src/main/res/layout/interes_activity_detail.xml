<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InteresActivityDetail">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/sportsImageDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/caba" />


        <TextView
            android:id="@+id/tvNombre"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_alignBottom="@id/sportsImageDetail"
            android:layout_marginBottom="164dp"
            android:elevation="10dp"
            android:padding="16dp"
            android:text="Nombre de la tienda"
            android:textAlignment="textStart"
            android:textSize="30dp"
            android:textStyle="bold"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:layout_constraintBottom_toBottomOf="@+id/sportsImageDetail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.009"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvDireccion"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sportsImageDetail"
            android:layout_marginTop="20dp"
            android:padding="16dp"
            android:text="Direccion de la tienda"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sportsImageDetail" />

        <TextView
            android:id="@+id/tvBarrio"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDireccion"
            android:layout_marginTop="4dp"
            android:padding="16dp"
            android:text="Barrio de la tienda"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDireccion" />

        <TextView
            android:id="@+id/tv_maps"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvBarrio"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="28dp"
            android:padding="16dp"
            android:text="Ver ubicacion"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/btn_img_maps"
            app:layout_constraintTop_toBottomOf="@+id/tvBarrio" />
        <TextView
            android:id="@+id/tv_web"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="28dp"
            android:padding="16dp"
            android:text="Sitio Web"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_img_web"
            app:layout_constraintTop_toBottomOf="@+id/tv_call"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.709" />

        <TextView
            android:id="@+id/tv_call"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_maps"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="160dp"
            android:padding="16dp"
            android:textSize="20dp"
            android:text="Telefono de la tienda"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.023"
            app:layout_constraintStart_toEndOf="@+id/btn_img_call"
            app:layout_constraintTop_toBottomOf="@+id/tv_maps" />

        <ImageButton
            android:id="@+id/btn_img_maps"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvBarrio"
            app:srcCompat="@drawable/ic_maps_50dp" />

        <ImageButton
            android:id="@+id/btn_img_call"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_img_maps"
            app:srcCompat="@drawable/ic_call" />



        <ImageButton
            android:id="@+id/btn_img_web"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_img_call"
            app:srcCompat="@drawable/ic_internet" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>