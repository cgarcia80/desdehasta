<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IniciarCircuitoActivity"
    android:background="@drawable/fondo">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="166dp"
        android:layout_height="122dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/bicycle_cycling_riding_sport_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewSeleccionCircutio"
        android:layout_width="262dp"
        android:layout_height="24dp"
        android:layout_marginTop="144dp"
        android:gravity="center"
        android:text="Seleccionar Circuito"
        android:textColor="#333333"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="391dp"
        android:layout_height="68dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/textViewSeleccionCircutio"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="11dp">

        <Spinner
            android:id="@+id/spinnerNavegacion"
            android:layout_width="372dp"
            android:layout_height="61dp"
            android:layout_marginBottom="50dp"

            />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/navegar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:backgroundTint="@color/green"
        android:paddingTop="12dp"

        android:src="@drawable/navigation_pointer_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.087"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>